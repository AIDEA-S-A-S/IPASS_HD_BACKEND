{
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "module": "commonjs",
    "allowJs": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es6",
    "isolatedModules": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "paths": {
      "@/models/*": ["models/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "MRZ"]
}
